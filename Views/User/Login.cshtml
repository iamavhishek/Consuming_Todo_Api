@model APIConsumeAndCrud.Models.UserEntity
@{
}


<form asp-action="Login">
    <div class="form-group">
        <label for="userEmail">Email address</label>
        <input asp-for="Email" type="email" class="form-control" id="userEmail" placeholder="Enter email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="userPassword">Password</label>
        <input asp-for="Password" type="password" class="form-control" id="userPassword" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>